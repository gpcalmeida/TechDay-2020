<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_marginStart="16dp"
    android:background="@drawable/dr_card_match_gradient"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/homeScoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="1"
            android:theme="@style/ScoreTextView" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_light"
            android:text="x"
            android:textSize="18sp"
            android:theme="@style/ScoreTextView" />

        <TextView
            android:id="@+id/visitorScoreTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="0"
            android:theme="@style/ScoreTextView" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="6dp"
        android:background="#09B822" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="CAMPEONATO CARIOCA"
        android:textColor="@color/white"
        android:textSize="9sp"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeTeamImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_acg" />

            <TextView
                android:id="@+id/homeTeamTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="FLA"
                android:textSize="14sp"
                android:theme="@style/ScoreTextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/visitorTeamImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_int" />

            <TextView
                android:id="@+id/visitorTeamTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                tools:text="VAS"
                android:textSize="14sp"
                android:theme="@style/ScoreTextView" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>